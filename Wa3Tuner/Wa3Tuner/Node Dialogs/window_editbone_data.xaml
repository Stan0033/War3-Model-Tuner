<Window x:Class="Wa3Tuner.window_editbone_data"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wa3Tuner"
        mc:Ignorable="d"
        KeyDown="Window_KeyDown"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="LightGray"
        Title="Edit bone data" Height="250" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Geoset" />
        <TextBlock Text="Geoset Animation" Grid.Column="1" />
        <ListBox x:Name="List_g" Grid.Row="1" SelectionChanged="SelectedG" SelectionMode="Single"/>
        <ListBox x:Name="List_ga" Grid.Row="1" Grid.Column="1" SelectionChanged="SelectedGA" SelectionMode="Single"/>
    </Grid>
</Window>
