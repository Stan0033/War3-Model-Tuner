<Window x:Class="Wa3Tuner.Dialogs.geoVisibilitiesKeyword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wa3Tuner.Dialogs"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="LightGray"
        Title="Edit visibilities based on keyword/s (OR)" Height="150" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <RadioButton Name="r1" IsChecked="True">Visible only in</RadioButton>
        <RadioButton Name="r2" Grid.Row="1">Not visible only in</RadioButton>
        <TextBox Name="box" Grid.Column="1" Background="LightGray" TextWrapping="Wrap" AcceptsReturn="True">
            
        </TextBox>
        <Button Grid.Column="1" Grid.Row="1" Click="ok">Finish</Button>
    </Grid>
</Window>
