<Window x:Class="Wa3Tuner.Dialogs.Mass_create_global_sequences"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wa3Tuner.Dialogs"
        mc:Ignorable="d"
        KeyDown="Window_KeyDown"
        Background="LightGray"
        Title="Mass create global sequences" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <TextBlock Padding="5" Text="Write integer durations, each on new line. They must not repeat, and not already exist. 0 or negative is not allowed." Grid.Row="0" />
        <TextBox  Name="Input" Grid.Row="1"   TextWrapping="Wrap"
AcceptsReturn="True"/>
        <Button Grid.Row="2" Click="ok" Margin="5">OK</Button>
    </Grid>
</Window>
