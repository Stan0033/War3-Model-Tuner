<Window x:Class="Wa3Tuner.putonground"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wa3Tuner"
        ResizeMode="NoResize"
        
        Background="LightGray"
        KeyDown="Window_KeyDown"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="Put on ground" Height="180" Width="200">
    <StackPanel Margin="10">
        <RadioButton Name="Check_1" IsChecked="True">Each selected</RadioButton>
        <RadioButton Name="Check_2">All selected together</RadioButton>
        <RadioButton Name="Check_3">Each of all</RadioButton>
        <RadioButton Name="Check_4">All together</RadioButton>
        <Button Click="ok" Content="OK" Margin="10" Padding="5"/>
    </StackPanel>
</Window>
