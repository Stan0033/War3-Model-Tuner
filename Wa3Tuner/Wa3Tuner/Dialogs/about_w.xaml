<Window x:Class="Wa3Tuner.Dialogs.about_w"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wa3Tuner.Dialogs"
        mc:Ignorable="d" Background="LightGray"
        ResizeMode="NoResize"
        KeyDown="Window_KeyDown"
        WindowStartupLocation="CenterScreen"
        Title="About War3 Model Tuner"  Height="260" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Column for the image -->
            <ColumnDefinition Width="Auto" />
            <!-- Column for the text block -->
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Image on the left -->
        <Image Grid.Column="0" Height="200" Width="200"  HorizontalAlignment="Left" Margin="20" Source="/Dialogs/tune.png"/>

        <!-- TextBlock in the second column -->
        <TextBlock Grid.Column="1" Name="Data" Margin="10" Foreground="Black" 
                   VerticalAlignment="Center" HorizontalAlignment="Left"
                   TextWrapping="Wrap" FontSize="14">

        </TextBlock>
    </Grid>
</Window>
