<Window x:Class="Wa3Tuner.axis_selector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wa3Tuner"
        mc:Ignorable="d"
        Background="LightGray"
        ResizeMode="NoResize"
        KeyDown="Window_KeyDown"
        WindowStartupLocation="CenterScreen"
        Title="Axis Selector" Height="150" Width="150">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
    
        <CheckBox Name="Check_x">X</CheckBox>
        <CheckBox Name="Check_y" Grid.Row="1">Y</CheckBox>
        <CheckBox Name="Check_z" Grid.Row="2">Z</CheckBox>
        <Button Content="OK" Grid.Row="3" Click="ok"/>
    </Grid>

</Window>
