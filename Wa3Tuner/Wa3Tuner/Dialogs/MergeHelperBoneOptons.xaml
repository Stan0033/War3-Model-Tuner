<Window x:Class="Wa3Tuner.Dialogs.MergeHelperBoneOptons"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wa3Tuner.Dialogs"
        mc:Ignorable="d" Background="LightGray"
        KeyDown="Window_KeyDown"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Merge (Helper+Bone) Options" Height="250" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <RadioButton IsChecked="True" Name="c1" Content="Erase transformations"/>
        <RadioButton IsChecked="True" Name="c2" Content="Preserve parent's transfomations" Grid.Row="1"/>
        <RadioButton IsChecked="True" Name="c3" Content="Preserve chlild's transfomations" Grid.Row="2"/>
        <RadioButton IsChecked="True" Name="c4" Content="Preserve whichever has more" Grid.Row="3"/>
        <Button Click="ok" Grid.Row="5" Content="OK"/>
    </Grid>
</Window>
