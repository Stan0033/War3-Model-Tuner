<Window x:Class="Wa3Tuner.ModelBrowser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wa3Tuner"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Background="LightGray"
        Title="Model Browser" Height="350" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!-- TextBox -->
        <TextBox Name="Input" Grid.Row="0" Margin="10" KeyDown="Input_KeyDown"   />
        <!-- ListBox -->
        <ListBox Name="Data" Grid.Row="1" Margin="10" SelectionMode="Single"/>
        <!-- Button -->
        <Button Grid.Row="2" Click="ok" Content="Load Model" Margin="10" Height="30" />
    </Grid>
</Window>