<Window x:Class="Wa3Tuner.select_Transformations"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wa3Tuner"
        mc:Ignorable="d"
        Background="LightGray"
        KeyDown="Window_KeyDown"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="select_Transformations" Height="150" Width="150">
    <StackPanel Margin="10">
        <CheckBox Name="Check_T" Content="Translation"/>
        <CheckBox Name="Check_R" Content="Rotation"/>
        <CheckBox Name="Check_S" Content="Scaling"/>
        <Button Click="OK" Content="OK"/>
    </StackPanel>
</Window>
