<Window x:Class="Wa3Tuner.select_Transformations"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wa3Tuner"
        mc:Ignorable="d"
        Background="LightGray"
        KeyDown="Window_KeyDown"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Select Transformations" Height="150" Width="250">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <CheckBox Name="Check_T" Content="Translation"/>
        <CheckBox Name="Check_R" Content="Rotation" Grid.Row="1"/>
        <CheckBox Name="Check_S" Content="Scaling" Grid.Row="2"/>
        <Button Click="OK" Content="OK" Grid.Row="3"/>
    </Grid>
       
</Window>
