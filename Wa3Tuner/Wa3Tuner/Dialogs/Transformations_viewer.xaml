<Window x:Class="Wa3Tuner.Transformations_viewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wa3Tuner"
        mc:Ignorable="d"
        KeyDown="Window_KeyDown"
        WindowStartupLocation="CenterScreen"
        Title="Transformations viewer" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <!-- Top row -->
            <RowDefinition Height="*"/>
            <!-- Bottom row -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <!-- First column -->
            <ColumnDefinition Width="1*"/>
            <!-- Second column -->
            <ColumnDefinition Width="1*"/>
            <!-- Third column -->
        </Grid.ColumnDefinitions>
        <!-- Top Row -->
        <TextBlock x:Name="TextBlockColumn1" Text="" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock x:Name="TextBlockColumn2" Text="" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock x:Name="TextBlockColumn3" Text="" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <!-- Bottom Row -->
        <TextBox x:Name="TextBoxColumn1" IsReadOnly="True" Grid.Row="1" Grid.Column="0" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
        <TextBox x:Name="TextBoxColumn2" IsReadOnly="True"  Grid.Row="1" Grid.Column="1" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
        <TextBox x:Name="TextBoxColumn3" IsReadOnly="True"  Grid.Row="1" Grid.Column="2" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>