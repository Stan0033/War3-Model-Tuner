<Window x:Class="Wa3Tuner.Dialogs.Render_Preferences"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wa3Tuner.Dialogs"
        mc:Ignorable="d"
        KeyDown="Window_KeyDown"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="LightGray"
        Title="Render Preferences" Height="500" Width="400">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Vertex size"/>
        
        <TextBox Name="InputVertexSize" Grid.Column="1" TextChanged="SetVertexSize"/>
        <TextBlock Text="Node size" Grid.Row="1"  />
        <TextBox Name="InputNodeSize" Grid.Row="1" Grid.Column="1" TextChanged="SetNodeSize"/>

        <TextBlock Text="Path Node size" Grid.Row="2"/>
        <TextBox Name="InputPNodeSize" Grid.Row="2" Grid.Column="1" TextChanged="SetPathNodeSize"/>
        
        
        <TextBlock Text="Path node color" Grid.Row="3"/>
        <Button Name="InputPathNodeColor" Grid.Row="3" Grid.Column="1" Click="SetPathNodeColor"/>


        <TextBlock Text="Path node color (Selected)" Grid.Row="4"/>
        <Button Name="InputPathNodeColorS"  Grid.Row="4" Grid.Column="1" Click="SetPathNodeColorS"/>

        <TextBlock Text="Path line color" Grid.Row="5"/>
        <Button Name="InputPathLine"  Grid.Row="5" Grid.Column="1" Click="setPathLine"/>
        
        <TextBlock Text="Vertex Color" Grid.Row="6"/>
        <Button Name="InputVertexColor"  Grid.Row="6" Grid.Column="1" Click="SetVertexColor"/>
        
        <TextBlock Text="Vertex Color (Selected)" Grid.Row="7"/>
        <Button Name="InputVertexColorS"  Grid.Row="7" Grid.Column="1" Click="SetVertexColorS"/>

        <TextBlock Text="Vertex Color (Rigged)" Grid.Row="8"/>
        <Button Name="InputVertexColorR"  Grid.Row="8" Grid.Column="1" Click="SetVertexColorR"/>

        <TextBlock Text="Vertex Color (Selected)(Rigged)" Grid.Row="9"/>
        <Button Name="InputVertexColorRS"  Grid.Row="9" Grid.Column="1" Click="SetVertexColorRS"/>

        <TextBlock Text="Edge" Grid.Row="10"/>
        <Button Name="InputEdge"  Grid.Row="10" Grid.Column="1" Click="SetEdge"/>

        <TextBlock Text="Edge (Selected)" Grid.Row="11"/>
        <Button Name="InputEdgeS"  Grid.Row="11" Grid.Column="1" Click="SetEdgeS"/>

        <TextBlock Text="Collision Shape Color" Grid.Row="12"/>
        <Button Name="InputColls"  Grid.Row="12" Grid.Column="1" Click="setCols"/>

        <TextBlock Text="Normals Color" Grid.Row="13"/>
        <Button Name="InputNormals"  Grid.Row="13" Grid.Column="1" Click="setNormals"/>

        <TextBlock Text="Extents Color" Grid.Row="14"/>
        <Button Name="InputExtents"  Grid.Row="14" Grid.Column="1" Click="setExtents"/>

        <TextBlock Text="Skinning Color" Grid.Row="15"/>
        <Button Name="InputSkinning"  Grid.Row="15" Grid.Column="1" Click="setskin"/>

        <TextBlock Text="Skeleton Color" Grid.Row="16"/>
        <Button Name="InputSkeleton"  Grid.Row="16" Grid.Column="1" Click="setsk"/>

        <TextBlock Text="Node Color" Grid.Row="17"/>
        <Button Name="InputNode"  Grid.Row="17" Grid.Column="1" Click="setnode"/>

        <TextBlock Text="Node Color (Selected)" Grid.Row="18"/>
        <Button Name="InputNodeS"  Grid.Row="18" Grid.Column="1" Click="setnode"/>

        <TextBlock Text="Grid Color" Grid.Row="19"/>
        <Button Name="InputGridC"  Grid.Row="19" Grid.Column="1" Click="setgrid"/>
        
        <TextBlock Text="Background Color" Grid.Row="20"/>
        <Button Name="InputBackground"  Grid.Row="20" Grid.Column="1" Click="setbg"/>
    </Grid>
</Window>
