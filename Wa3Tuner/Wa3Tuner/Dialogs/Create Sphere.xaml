<Window x:Class="Wa3Tuner.Dialogs.Create_Sphere"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wa3Tuner.Dialogs"
        mc:Ignorable="d"
        KeyDown="Window_KeyDown"
        Background="LightGray"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Create Sphere" Height="150" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="48.5"/>
            <ColumnDefinition Width="8.18"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Sections:" Margin="5,0,5,0" Grid.Column="0" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
        <TextBox Name="txtSections" Margin="21,5,22,5" Grid.Row="0" Grid.Column="2" Width="100"/>

        <TextBlock Text="Slices:" Margin="5,0,5,0" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
        <TextBox Name="txtSlices" Margin="21,5,22,5" Grid.Row="1" Grid.Column="2" Width="100"/>

        <Button Name="btnOk" Click="ok" Content="OK" Grid.Row="2" Margin="3,5,0,5" Width="80" HorizontalAlignment="Left" Grid.Column="2"/>
    </Grid>
</Window>
